<!DOCTYPE grammar PUBLIC "-//W3C//DTD GRAMMAR 1.0//EN" "http://www.w3.org/TR/speech-grammar/grammar.dtd">



<grammar version="1.0" 
         xml:lang="en-US" mode="voice" root="yes"
         xmlns="http://www.w3.org/2001/06/grammar"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://www.w3.org/2001/06/grammar 
                             http://www.w3.org/TR/speech-grammar/grammar.xsd"
>

 <!-- meta information -->
 
<meta name="description" content="Implementation Report test -- xml:lang attribute on item with single language" />


 <meta name='in.1' content='oui' />

 <meta name='out.1' content='$yes["oui"]' />


 <meta name='in.2' content='yes' />

 <meta name='out.2' content='$yes["yes"]' />


 
<!-- rule declarations -->
 <rule id="yes" scope="public">
  <one-of>
   <item xml:lang="fr"> oui </item>
   <item> yes </item>
  </one-of> 
 </rule>

</grammar>
