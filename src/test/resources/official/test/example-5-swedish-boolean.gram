language sv;
mode voice;
root $main;
meta 'description' is 'Implementation Report test -- example 5';
meta 'in.1' is 'ja det är rätt';
meta 'out.1' is '$main[$yes_rule["ja",$yes_emphasis["det","är","rätt"]]]';

/** 
* @example ja det är rätt
* @example nej det är fel
*/
public $main = 
  
( ( $yes_rule)       |
 ( $no_rule) ) ;


/** 
* @example ja det är rätt
*/
private $yes_rule = 
  
( (exakt)       |
 (javisst)       |
 (ja  ( $yes_emphasis)  <0-1>)       |
 (jepp)       |
 (korrekt)       |
 (okej)       |
 (rätt)       |
 (si)       |
 (säkert)       |
 (visst) ) ;


/** 
* @example det stämmer
*/
private $yes_emphasis = 
  
( (det gjorde jag)       |
 ( (det)  <0-1>
             stämmer
    )       |
 (det är rätt)       |
 (det är korrekt)       |
 (det är riktigt) ) ;


/** 
* @example nej det är fel
*/
private $no_rule = 
  
( (icke)       |
 (fel)       |
 (nej  ( $no_emphasis)  <0-1>)       |
 (nix)       |
 (no) ) ;


/** 
* @example det är fel
*/
private $no_emphasis = 
  
( (det gjorde jag inte)       |
 ( (det)  <0-1>
       stämmer inte
    )       |
 (det är fel)       |
 (absolut inte)       |
 (inte alls) ) ;

